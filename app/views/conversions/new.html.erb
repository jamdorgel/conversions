<p id="notice"><%= notice %></p>

<div class='content-wrapper'>
    <div class="content">

        <h2> Currency Calculator</h2>

        <%= form_for @conversion, url: {action: "create"} do |f| %>

                <div class="field">
                    Starting Currency:
                    <%= f.select :starting_currency, @currency_codes, selected: "USD" %>
                </div>

                <div class="field">
                    Amount:
                    <%= f.number_field(:amount, step: '0.01') %>
                </div>

                <div class="field">
                    Final Currency:
                    <%= f.select :final_currency, @currency_codes, selected: "CAD" %>
                </div>

                <div>
                    <%= f.submit "Convert" %>
                </div>

        <% end %>

    </div>
</div>
